{
	"name": "lock-in",
	"description": "A productivity extension helping you to lock in by blocking distracting sites during work hours.",
	"version": "0.0.0-development",
	"type": "module",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "vite",
		"prod": "vite build",
		"lint": "biome check .",
		"lint:fix": "biome check --write . --unsafe",
		"format": "biome format --write .",
		"release": "semantic-release --config ./release.config.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@crxjs/vite-plugin": "^2.2.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@tsconfig/svelte": "^5.0.6",
		"@types/chrome": "^0.1.31",
		"crx": "^5.0.1",
		"husky": "^9.1.7",
		"semantic-release": "^25.0.2",
		"svelte": "^5.45.2",
		"tailwindcss": "^4.1.17",
		"type-fest": "^5.2.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.4",
		"vite-plugin-zip-pack": "^1.2.4"
	},
	"commitlint": {
		"parserPreset": "conventional-changelog-conventionalcommits",
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@4.12.0"
}
