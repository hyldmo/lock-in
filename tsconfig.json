{
	"compilerOptions": {
		"noEmit": true,
		"sourceMap": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"downlevelIteration": true,

		"allowJs": true,
		"checkJs": true,

		"module": "ES6",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"esModuleInterop": true,
		"skipLibCheck": false
	},
	"include": ["src/**/*", "*.ts", "release.config.js"]
}
