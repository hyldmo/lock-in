{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,

		"strict": true,
		"verbatimModuleSyntax": true,
		"downlevelIteration": true,

		"allowJs": false,
		"checkJs": false,

		"module": "ES6",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "*.ts"]
}
